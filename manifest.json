{
  "manifest_version": 3,
  "name": "Skipping Ads on YouTube",
  "version": "1.0.1",
  "description": "Tự động bỏ qua quảng cáo trên youtube một cách nhanh chóng và hiệu quả.",
  "icons": {
    "16": "src/icon.png",
    "32": "src/icon.png",
    "48": "src/icon.png",
    "128": "src/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["src/inject.js"],
      "run_at": "document_idle"
    }
  ]
}
